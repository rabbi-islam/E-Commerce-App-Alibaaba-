<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="12dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/productItemName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/mainColor"/>

        <TextView
            android:id="@+id/productPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignBottom="@id/productItemName"
            android:gravity="center_vertical"
            android:layout_alignEnd="@+id/dollarSign"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="12dp"
            android:text="1200"
            android:textColor="@color/mainColor"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/dollarSign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_alignBottom="@id/productItemName"
            android:gravity="center_vertical"
            android:text="$"
            android:textSize="16sp"
            android:textColor="@color/mainColor"/>
        <ImageView
            android:id="@+id/productItemImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerInside"
            android:layout_marginTop="3dp"
            android:layout_below="@+id/productItemName"
            />

        <TextView
            android:id="@+id/productItemDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Description"
            android:textAlignment="center"
            android:layout_marginTop="3dp"
            android:layout_below="@id/productItemImage"
            android:textSize="15sp"
            android:textColor="@color/mainColor"/>

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>