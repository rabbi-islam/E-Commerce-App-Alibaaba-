<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminCategoryActivity">

    <TextView
        android:id="@+id/addNewProductTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add New Product"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textSize="25sp"
        android:layout_alignParentTop="true"
        android:textStyle="bold"
        android:layout_marginTop="30dp"/>

    <LinearLayout
        android:id="@+id/linear_layout1"
        android:layout_width="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_below="@+id/addNewProductTV"
        android:layout_marginTop="40dp">

        <ImageView
            android:id="@+id/tShirt"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/tshirts"/>
        <ImageView
            android:id="@+id/sportTShirt"
            android:layout_width="70dp"
            android:layout_height="90dp"
            android:src="@drawable/sports"/>
        <ImageView
            android:id="@+id/femaleDress"
            android:layout_width="70dp"
            android:layout_height="90dp"
            android:src="@drawable/female_dresses"/>
        <ImageView
            android:id="@+id/sweather"
            android:layout_width="70dp"
            android:layout_height="90dp"
            android:src="@drawable/sweather"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear_layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_below="@+id/linear_layout1"
        android:layout_marginTop="40dp">

        <ImageView
            android:id="@+id/glasses"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:src="@drawable/glasses"/>
        <ImageView
            android:id="@+id/purses_bags"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:src="@drawable/purses_bags"/>
        <ImageView
            android:id="@+id/hats"
            android:layout_width="70dp"
            android:layout_height="90dp"
            android:src="@drawable/hats"/>
        <ImageView
            android:id="@+id/shoess"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:src="@drawable/shoess"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear_layout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_below="@+id/linear_layout2"
        android:layout_marginTop="40dp">

        <ImageView
            android:id="@+id/headphoness"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:src="@drawable/headphoness"/>
        <ImageView
            android:id="@+id/laptops"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:src="@drawable/laptops"/>
        <ImageView
            android:id="@+id/watches"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:src="@drawable/watches"/>
        <ImageView
            android:id="@+id/mobiles"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:src="@drawable/mobiles"/>

    </LinearLayout>

</RelativeLayout>